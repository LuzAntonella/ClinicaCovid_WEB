        <!-- MIS DATOS FÍSICOS-->
        <div class="container p-3">
            <h3 class="font-weight-bold mb-0"> EDIT FICHA MÉDICA</h3>
            <div class="col-md-4 mx-auto">
                <div class="card">
                    <div class="card-header">
                        <h3>Edit Ficha Médica</h3>
                    </div>
                    <div class="card-body">
                        <form action="/fichaM/edit-fichaM/{{datosF.id}}?_method=PUT" method="POST">
                            <input type="hidden" name="_method" value="PUT">
                            <div class="form-group">
                                <p>
                                    Estado Civil: <input type="radio" id="civil" name="civil" value="soltero">Soltero
                                    <input type="radio" name="civil" id="civil" value="casado">Casado
                                    <input type="radio" name="civil" id="civil" value="otro">Otro
                                </p>
                            </div>
                            <div class="form-group">
                                País:
                                <label for="pais"></label>
                                <select name="pais" id="pais" class="form-control">
                                    <option>{{datosF.pais}}</option>
                                    <option>España</option>
                                    <option>México</option>
                                    <option>Colombia</option>
                                    <option>Perú</option>
                                    <option>Chile</option>
                                    <option>Argentina</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="exampleFormControlSelect1">Tipo de sangre</label>
                                <select name="tipoSangre" class="form-control">
                                    <option>{{datosF.tipoSangre}}</option>
                                    <option>O-</option>
                                    <option>O+</option>
                                    <option>A-</option>
                                    <option>A+</option>
                                    <option>B-</option>
                                    <option>B+</option>
                                    <option>AB-</option>
                                    <option>AB+</option>
                                </select>
                            </div>
                            <div class="form-group">
                                Seguro Médico:
                                <input type="text" name="seguroM" class="form-control" value="{{ datosF.seguroM }}">

                            </div>

                            <div class="form-group">
                                <label for="exampleFormControlSelect1">Enfermedad Previa</label>
                                <select name="enfermedadPrevia" class="form-control">
                                    <option>{{ datosF.enfermedadPrevia }}</option>
                                    <option>Diabetes</option>
                                    <option>Presión Alta</option>
                                    <option>Enfermedad Cardiaca</option>
                                    <option>Asma</option>
                                    <option>Sin enfermedad</option>
                                    <option>Otro</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="exampleFormControlSelect1">Alergias</label>
                                <select name="alergias" class="form-control">
                                    <option>{{ datosF.alergias}}</option>
                                    <option>Si</option>
                                    <option>No</option>

                                </select>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary btn-block" type="submit">
                                    Save
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>